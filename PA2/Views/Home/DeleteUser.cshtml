@model PA2.Models.Customer

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerAdmin)
        </dt>

        <dd>
            @if (Model.CustomerAdmin == "1")
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.CustomerID)
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to Users", "Users")
        </div>
    }
</div>
